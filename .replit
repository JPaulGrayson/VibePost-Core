run = "chmod +x scripts/start-all.sh && ./scripts/start-all.sh"
entrypoint = "server/index.ts"
modules = ["nodejs-20", "postgresql-16"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5002
externalPort = 80

[deployment]
build = "npm install && npm run build"
run = "npm run start"
deploymentTarget = "cloudrun"
ignorePorts = false

[[deployment.ports]]
localPort = 5002
externalPort = 80

[nix]
channel = "stable-25_05"

[agent]
integrations = ["javascript_log_in_with_replit:2.0.0", "javascript_gemini_ai_integrations:2.0.0"]

[workflows]

[[workflows.workflow]]
name = "Start Application"
mode = "sequential"
author = 42982851

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
